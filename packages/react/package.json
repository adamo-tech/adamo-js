{
  "name": "@adamo/adamo-react",
  "version": "1.0.0",
  "description": "React components and hooks for ADAMO teleoperation",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external @adamo/adamo-core",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --external @adamo/adamo-core --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@adamo/adamo-core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "keywords": [
    "adamo",
    "react",
    "teleoperation",
    "robotics"
  ],
  "license": "MIT"
}
