{
  "name": "@adamo-tech/core",
  "version": "2.0.0",
  "description": "Core ADAMO client library for teleoperation via WebRTC",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./webcodecs/decoder-worker": {
      "types": "./dist/webcodecs/decoder-worker.d.ts",
      "import": "./dist/webcodecs/decoder-worker.mjs",
      "require": "./dist/webcodecs/decoder-worker.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/webcodecs/decoder-worker.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/webcodecs/decoder-worker.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "adamo",
    "webrtc",
    "webcodecs",
    "ros",
    "robotics",
    "teleoperation"
  ],
  "license": "MIT"
}
